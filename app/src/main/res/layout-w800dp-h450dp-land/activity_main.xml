<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="1059dp"
        android:layout_height="567dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            tools:layout_editor_absoluteX="0dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:onClick="sendOk"
                app:srcCompat="@drawable/ic_happy" />

            <Button
                android:id="@+id/hangupButton"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/common_google_signin_btn_text_dark_focused"
                android:onClick="stopCall"
                android:text="Stop call"
                android:visibility="gone" />

            <Button
                android:id="@+id/button2"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/common_google_signin_btn_text_dark_focused"
                android:onClick="openCallDialog"
                android:text="Open call dialog"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:onClick="sendKo"
                app:srcCompat="@drawable/ic_sad" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:weightSum="20"
            tools:layout_editor_absoluteX="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="18"
                android:gravity="center_vertical"
                tools:ignore="NestedWeights,UselessParent">

                <LinearLayout
                    android:id="@+id/callCard1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="10"
                    android:gravity="center_horizontal"
                    >

                    <ImageView
                        android:id="@+id/callView1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_weight="8"
                        android:rotation="270"
                        app:srcCompat="@drawable/ic_baseline_phone_24"
                        />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="Emmanuel"
                        android:textSize="30dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/callCard2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="10"
                    android:gravity="center_horizontal"
                    >

                    <ImageView
                        android:id="@+id/callView2"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_weight="8"
                        android:rotation="270"
                        app:srcCompat="@drawable/ic_baseline_phone_24" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="Alexandre"
                        android:textSize="30dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/sosView"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:onClick="sendSOS"
                    app:srcCompat="@drawable/ic_sos" />

                <ImageView
                    android:id="@+id/microView"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:onClick="record"
                    app:srcCompat="@drawable/ic_baseline_mic_24" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>